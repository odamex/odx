{
  "name": "odx-launcher",
  "version": "0.4.0",
  "description": "ODX - Cross-platform Odamex launcher with single player, multiplayer, and server management",
  "main": "dist-electron/main.js",
  "author": {
    "name": "Odamex Development Group",
    "email": "odamex@odamex.net"
  },
  "license": "GPL-2.0",
  "private": true,
  "keywords": [
    "odamex",
    "odalaunch",
    "doom",
    "doom2",
    "doom 2",
    "doom ii",
    "freedoom",
    "chex quest",
    "chex",
    "hacx",
    "home",
    "singleplayer",
    "single player",
    "multiplayer",
    "multi player",
    "servers",
    "hosting",
    "community",
    "settings",
    "game",
    "launcher",
    "server",
    "fps",
    "retro",
    "id software"
  ],
  "scripts": {
    "ng": "ng",
    "postinstall": "electron-builder install-app-deps",
    "start": "concurrently \"npm run build:electron:watch\" \"npm run start:angular\" \"npm run wait-and-electron\"",
    "start:angular": "ng serve",
    "start:electron": "electron . --serve",
    "wait-and-electron": "wait-on http://localhost:4200 && npm run start:electron",
    "build": "npm run build:angular && npm run build:electron",
    "build:angular": "ng build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:electron:watch": "tsc -p tsconfig.electron.json --watch",
    "prepackage": "node scripts/check-token.js",
    "package": "npm run build && electron-builder build --publish never",
    "package:win": "npm run build && electron-builder build --win --publish never",
    "package:mac": "npm run build && electron-builder build --mac --publish never",
    "package:linux": "npm run build && electron-builder build --linux --publish never",
    "test": "ng test",
    "pretest": "npx tsx scripts/generate-version.ts",
    "prebuild": "npx tsx scripts/generate-version.ts",
    "prestart": "npx tsx scripts/generate-version.ts"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "^21.0.5",
    "@angular/common": "^21.0.5",
    "@angular/compiler": "^21.0.5",
    "@angular/core": "^21.0.5",
    "@angular/forms": "^21.0.5",
    "@angular/platform-browser": "^21.0.5",
    "@angular/platform-browser-dynamic": "^21.0.5",
    "@angular/router": "^21.0.5",
    "@ng-bootstrap/ng-bootstrap": "^20.0.0",
    "@ng-icons/bootstrap-icons": "^33.0.0",
    "@ng-icons/core": "^33.0.0",
    "@ngrx/signals": "^21.0.1",
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "dgram-as-promised": "^6.0.0",
    "discord-rpc": "^4.0.1",
    "dotenv": "^17.2.3",
    "electron-log": "^5.2.5",
    "electron-updater": "^6.3.9",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.5",
    "@angular/localize": "^21.0.5",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^25.0.1",
    "concurrently": "^9.1.2",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "jasmine-core": "^5.13.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.2",
    "wait-on": "^9.0.3",
    "zone.js": "^0.15.1"
  },
  "build": {
    "appId": "net.odamex.launcher",
    "productName": "ODX",
    "icon": "build/icon.ico",
    "artifactName": "${productName}-${os}-${arch}-${version}.${ext}",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "build/trayicon.png",
        "to": "trayicon.png"
      },
      {
        "from": "build/overlay-icons",
        "to": "overlay-icons"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.games",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "public/favicon.512x512.png",
      "category": "Amusement;Game;ActionGame;AdventureGame;ArcadeGame",
      "desktop": {
        "entry": {
          "Name": "ODX",
          "GenericName": "Odamex Launcher",
          "Comment": "Cross-platform Odamex launcher with single player, multiplayer, and server management",
          "Keywords": "odamex;odalaunch;doom;doom2;doom 2;doom ii;heretic;hexen;strife;freedoom;chex quest;chex;hacx;home;singleplayer;single player;multiplayer;multi player;servers;hosting;community;settings;game;launcher;server;fps;retro;id software;Amusement;Game;ActionGame;AdventureGame;ArcadeGame;",
          "StartupWMClass": "ODX"
        }
      }
    },
    "deb": {
      "packageName": "odx-launcher"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ODX",
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "include": "build/installer.nsh",
      "deleteAppDataOnUninstall": false
    },
    "publish": {
      "provider": "github",
      "owner": "odamex",
      "repo": "odx"
    }
  }
}
